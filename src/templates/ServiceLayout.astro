---
import Layout from '../layouts/Layout.astro';
import { links } from '../pages/index.astro';
const { frontmatter } = Astro.props;
---

<Layout 
  title={`${frontmatter.title} | Joshep Manuel Macha Rutti`} 
  description={frontmatter.description}>
  
  <main class="min-h-screen py-16 px-4 sm:px-6 lg:px-8">
    <div class="max-w-4xl mx-auto">
      <!-- Encabezado del servicio -->
      <div class="text-center mb-12">
        <div class="inline-flex items-center justify-center w-20 h-20 rounded-full bg-accent/10 dark:bg-cyan-500/10 mb-6">
          <span class="text-4xl">{frontmatter.icon}</span>
        </div>
        <h1 class="text-4xl md:text-5xl font-bold text-foreground dark:text-white mb-4">
          {frontmatter.title}
        </h1>
        <p class="text-xl text-muted-foreground dark:text-gray-300 max-w-3xl mx-auto">
          {frontmatter.description}
        </p>
      </div>

      <!-- Imagen destacada -->
      {frontmatter.featuredImage && (
        <div class="mb-12 rounded-xl overflow-hidden shadow-xl">
          <img 
            src={frontmatter.featuredImage} 
            alt={frontmatter.title}
            class="w-full h-auto object-cover"
            loading="lazy"
          />
        </div>
      )}

      <!-- Contenido del servicio -->
      <div class="dark:text-white text-lg">
        <slot />
      </div>

      <!-- BotÃ³n de regreso -->
      <div class="mt-12 text-center">
        <a 
          href="/services" 
          class="inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md transition-all duration-200
                /* Estilos Light Mode */
                text-white bg-gray-600 hover:bg-gray-700 shadow-sm
                /* Estilos Dark Mode */
                dark:bg-cyan-600 dark:hover:bg-cyan-500 dark:text-white dark:shadow-cyan-900/20"
        >
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd" />
          </svg>
          Volver a servicios
        </a>

        <a 
          href={`${links.whatsapp}`} 
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md transition-all duration-200
                /* Estilos Light Mode */
                text-white bg-gray-600 hover:bg-gray-700 shadow-sm
                /* Estilos Dark Mode */
                dark:bg-green-600 dark:hover:bg-green-500 dark:text-white dark:shadow-green-900/20"
        >
          <svg height="20px" width="20px" version="1.1" id="Layer_1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" viewBox="0 0 512 512" xml:space="preserve" fill="#000000"><g id="SVGRepo_bgCarrier" stroke-width="0"></g><g id="SVGRepo_tracerCarrier" stroke-linecap="round" stroke-linejoin="round"></g><g id="SVGRepo_iconCarrier"> <path style="fill:#20A83E;" d="M437.019,74.98C388.668,26.628,324.38,0,256,0S123.333,26.628,74.98,74.98S0,187.62,0,256 c0,51.485,15.154,100.938,43.874,143.34L0.69,500.106c-1.343,3.134-0.607,6.966,1.798,9.381c2.495,2.506,6.519,3.206,9.714,1.684 l96.358-45.885C151.858,495.866,202.721,512,256,512c68.38,0,132.668-26.628,181.019-74.98C485.371,388.667,512,324.38,512,256 S485.371,123.333,437.019,74.98z"></path> <circle style="fill:#E5E5E5;" cx="256" cy="256" r="213.333"></circle> <circle style="fill:#FFFFFF;" cx="256" cy="256" r="187.733"></circle> <path style="fill:#20A83E;" d="M392.391,342.641l-7.673-41.561c-0.635-3.432-3.295-6.133-6.718-6.818l-60.339-12.067 c-2.802-0.559-5.691,0.317-7.709,2.334l-24.514,24.514c-41.302-18.507-64.226-41.478-84.396-84.555l24.435-24.436 c2.018-2.017,2.893-4.91,2.334-7.708l-12.068-60.34c-0.685-3.423-3.386-6.084-6.819-6.718l-41.561-7.673 c-1.138-0.21-2.31-0.187-3.44,0.07c-10.974,2.494-20.987,8.023-28.956,15.994c-13.801,13.801-19.075,33.938-15.252,58.237 c6.418,40.801,26.409,97.583,63.289,134.61l0.502,0.5c37.001,36.855,93.782,56.846,134.583,63.265 c5.14,0.809,10.092,1.21,14.838,1.21c17.694,0,32.517-5.581,43.4-16.462c7.97-7.971,13.5-17.984,15.993-28.957 C392.578,344.951,392.602,343.78,392.391,342.641z"></path> <path style="fill:#189433;" d="M349.996,376.428c-4.747,0-9.698-0.401-14.838-1.21c-40.801-6.419-97.583-26.41-134.583-63.265 l-0.502-0.5c-36.88-37.027-56.87-93.809-63.289-134.61c-3.323-21.118,0.236-39.088,10.283-52.492 c-4.388,2.565-8.458,5.689-12.097,9.328c-13.801,13.801-19.075,33.938-15.252,58.237c6.418,40.801,26.409,97.583,63.289,134.61 l0.502,0.5c37.001,36.855,93.782,56.846,134.583,6