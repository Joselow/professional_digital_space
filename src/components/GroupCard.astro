---
interface Props {
  groupName: string;
  currentStudents: number;
  whatsappLink: string;
  enrollmentText?: string;
}

const { 
  groupName = 'JS-2602 - "Perspectiva"',
  currentStudents = 0,
  whatsappLink = 'https://chat.whatsapp.com/Bvf6K5nPuQB7bUmGguNRyQ',
  enrollmentText = '¡Únete a nuestra comunidad de aprendizaje!'
} = Astro.props;
---

<div class="group-card bg-white rounded-xl shadow-lg overflow-hidden border border-gray-100 hover:shadow-xl transition-shadow duration-300">
  <div class="p-6">
    <div class="flex justify-between items-start mb-4">
      <h3 class="text-xl font-bold text-gray-800">{groupName}</h3>
      <div class="bg-blue-100 text-blue-800 text-lg font-medium px-2.5 py-0.5 rounded-full">
        {currentStudents} {currentStudents === 1 ? 'alumno' : 'alumnos'} inscritos
      </div>
    </div>
    
    <p class="text-gray-600 mb-6">{enrollmentText}</p>
    
    <div class="flex flex-col sm:flex-row gap-3">
      <a 
        href={whatsappLink}
        target="_blank"
        rel="noopener noreferrer"
        class="flex-1 flex items-center justify-center gap-2 bg-green-700 hover:bg-green-800 text-white font-medium py-2 px-4 rounded-lg transition-colors"
      >
        <svg width="64px" height="64px" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg" fill="#000000"><g id="SVGRepo_bgCarrier" stroke-width="0"></g><g id="SVGRepo_tracerCarrier" stroke-linecap="round" stroke-linejoin="round"></g><g id="SVGRepo_iconCarrier"> <rect x="0" fill="none" width="20" height="20"></rect> <g> <path d="M16.8 5.7C14.4 2 9.5.9 5.7 3.2 2 5.5.8 10.5 3.2 14.2l.2.3-.8 3 3-.8.3.2c1.3.7 2.7 1.1 4.1 1.1 1.5 0 3-.4 4.3-1.2 3.7-2.4 4.8-7.3 2.5-11.1zm-2.1 7.7c-.4.6-.9 1-1.6 1.1-.4 0-.9.2-2.9-.6-1.7-.8-3.1-2.1-4.1-3.6-.6-.7-.9-1.6-1-2.5 0-.8.3-1.5.8-2 .2-.2.4-.3.6-.3H7c.2 0 .4 0 .5.4.2.5.7 1.7.7 1.8.1.1.1.3 0 .4.1.2 0 .4-.1.5-.1.1-.2.3-.3.4-.2.1-.3.3-.2.5.4.6.9 1.2 1.4 1.7.6.5 1.2.9 1.9 1.2.2.1.4.1.5-.1s.6-.7.8-.9c.2-.2.3-.2.5-.1l1.6.8c.2.1.4.2.5.3.1.3.1.7-.1 1z"></path> </g> </g></svg>
        Unirse a la comunidad
      </a>
      
      <a   
        href="https://wa.me/902909009?text=Hola%20estimado%2C%20deseo%20enlistarme%20al%20grupo%202602%20-%20Compromiso"

        target="_blank"
        rel="noopener noreferrer"
        class="flex-1 flex items-center justify-center gap-2 bg-green-500 hover:bg-green-600 text-white font-medium py-2 px-4 rounded-lg transition-colors"
      >
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" class="text-white">
          <path d="M12 4V20M20 12H4" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
        Enlistarse
      </a>
    </div>
  </div>
</div>

<style>
  .group-card {
    max-width: 500px;
    margin: 0 auto;
    transition: transform 0.2s ease-in-out;
  }
  .group-card:hover {
    transform: translateY(-4px);
  }
</style>
