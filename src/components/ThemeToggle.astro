---
// src/components/ThemeToggle.astro
const { initialTheme = 'system' } = Astro.props;
---

<button
  id="theme-toggle"
  class="cursor-pointer p-2 rounded-lg hover:bg-gray-300 dark:hover:bg-gray-200 transition-colors
    dark:bg-white
  "
  aria-label="Toggle theme"
  data-theme={initialTheme}
>
  <svg class="w-6 h-6 text-foreground" fill="none" viewBox="0 0 24 24" stroke="currentColor">
    <path
      class="block dark:hidden"
      stroke-linecap="round"
      stroke-linejoin="round"
      stroke-width="2"
      d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"
    />
    <path
      class="hidden dark:block dark:text-black"
      stroke-linecap="round"
      stroke-linejoin="round"
      stroke-width="2"
      d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"
    />
  </svg>
</button>

<script>
  // Get the theme toggle button
  const themeToggle = document.getElementById('theme-toggle');
  const html = document.documentElement;

  // Function to set the theme
  function setTheme(theme: string) {
    if (!themeToggle) return
    
    if (theme === 'dark') {
      html.classList.add('dark');
      themeToggle.setAttribute('data-theme', 'dark');
      localStorage.setItem('theme', 'dark');
    } else if (theme === 'light') {
      html.classList.remove('dark');
      themeToggle.setAttribute('data-theme', 'light');
      localStorage.setItem('theme', 'light');
    } else {
      // System preference
      if (window.matchMedia('(prefers-color-scheme: dark)').matches) {
        html.classList.add('dark');
      } else {
        html.classList.remove('dark');
      }
      themeToggle.setAttribute('data-theme', 'system');
      localStorage.setItem('theme', 'system');
    }
  }

  // Toggle between themes
  themeToggle?.addEventListener('click', () => {
    const currentTheme = themeToggle.getAttribute('data-theme');
    if (currentTheme === 'dark') {
      setTheme('light');
    } else if (currentTheme === 'light') {
      setTheme('system');
    } else {
      setTheme('dark');
    }
  });

  // Check for saved theme preference or use system preference
  const savedTheme = localStorage.getItem('theme') || 'system';
  setTheme(savedTheme);

  // Watch for system theme changes
  window.matchMedia('(prefers-color-scheme: dark)').addEventListener('change', (e) => {
    if (savedTheme === 'system') {
      setTheme('system');
    }
  });
</script>